@model MusicStore.Models.Album

@{
    ViewData["Title"] = "Details";
}

<h1>Album Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-12">
            <img src="~/content/@(Model.AlbumArtUrl)" alt="album cover">
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Genre):  @Html.DisplayFor(model => model.Genre.Name)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Artist): @Html.DisplayFor(model => model.Artist.Name)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Price): @Html.DisplayFor(model => model.Price)
        </dd>
       
    </dl>
</div>
<div>
    <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@Model.AlbumID">Add to cart</a> <br />
    <a asp-action="ListAlbums" asp-route-id="@Model.GenreID">Back</a>
</div>

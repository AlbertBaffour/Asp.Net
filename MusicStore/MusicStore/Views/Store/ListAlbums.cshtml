@model MusicStore.Models.ViewModel.ListAlbumsViewModel

@{
    ViewData["Title"] = "Index";
}
@using MusicStore.Helpers
<h1>Albums</h1>

<h3>
    @(Html.DisplayFor(model =>model.genre.Name)) Albums
</h3>
<div class="row">

    @foreach (var a in Model.Albums)
    {
        <div class="col-6 col-md-4 col-lg-2">
            <a class="text-decoration-none" asp-controller="Store" asp-action="Details" asp-route-id="@a.AlbumID">
                <img width="100px" src="~/content/@(a.AlbumArtUrl)" alt="album cover">
                <p class="">
                    @(MyHelper.Truncate( a.Title,20))
                </p>
            </a>
        </div>
    }
</div>
